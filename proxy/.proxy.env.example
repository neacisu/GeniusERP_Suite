#######################################################
# INFRASTRUCTURĂ: PROXY/TRAEFIK (PROXY)
# Sursă: Tabelul 4 - Porturi 80/443
#######################################################

# -- CONFIGURARE TRAEFIK --
PROXY_HTTP_PORT=80
PROXY_HTTPS_PORT=443
PROXY_DASHBOARD_PORT=8080

# -- DOMENIU ȘI TLS --
PROXY_DOMAIN=geniuserp.app
PROXY_TLS_ACME_EMAIL=admin@geniuserp.app
PROXY_TLS_ACME_CA_SERVER=https://acme-v02.api.letsencrypt.org/directory
PROXY_DASHBOARD_DOMAIN=traefik.geniuserp.app

# -- CERTIFICATE SSL/TLS --
# Let's Encrypt (production)
PROXY_ACME_STORAGE=/letsencrypt/acme.json

# -- AUTENTIFICARE DASHBOARD --
PROXY_DASHBOARD_USER=admin

# -- OPENBAO PROCESS SUPERVISOR --
PROXY_BAO_AGENT_CONFIG=/openbao/agent-config.hcl
PROXY_APPROLE_ROLE_ID_PATH=.secrets/approle/proxy/role-id
PROXY_APPROLE_SECRET_ID_PATH=.secrets/approle/proxy/secret-id

# -- REȚEA --
# Rețeaua edge (expusă public)
PROXY_NETWORK_EDGE=geniuserp_net_edge
# Rețeaua internă (către servicii)
PROXY_NETWORK_INTERNAL=geniuserp_net_suite_internal
# Rețeaua observability (scrape metrics)
PROXY_NETWORK_OBSERVABILITY=geniuserp_net_observability

# -- OBSERVABILITATE --
PROXY_OBS_METRICS_ENABLED=true
PROXY_OBS_ACCESS_LOG_ENABLED=true

# -- DNS PROVIDER (OPȚIONAL) --
# Exemplu pentru Cloudflare (folosit dacă se activează DNS-01 challenge)
PROXY_DNS_PROVIDER=cloudflare
PROXY_CF_ZONE_ID=ReplaceMeWithZoneId

# Secretele (parola dashboard, token Cloudflare) sunt injectate din OpenBao

