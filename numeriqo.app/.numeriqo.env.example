#######################################################
# APLICAȚIE: NUMERIQO - Accounting + HR/Payroll (NUMQ)
# Sursă: Tabelul 5 - Interval 6750-6799, Șablonul 3
#######################################################

# -- CONFIGURARE APLICAȚIE --
# Portul intern al API-ului Fastify
NUMQ_APP_PORT=6750
NUMQ_APP_METRICS_PORT=6751
NUMQ_APP_NODE_ENV=production

# -- BAZA DE DATE (Specifică 'numeriqo') --
NUMQ_DB_POSTGRES_URL=postgresql://numeriqo_user:ReplaceMe@postgres_server:5432/numeriqo_db

# -- AUTENTIFICARE --
NUMQ_AUTH_IDENTITY_URL=http://identity:6250
NUMQ_AUTH_JWT_SECRET=ReplaceMeWithStrongJWTSecretKey

# -- CHEI API PENTRU INTEGRĂRI --
# ANAF (SPV, e-Factura, API contribuabili)
NUMQ_API_ANAF_CLIENT_ID=ReplaceMeWithAnafClientID
NUMQ_API_ANAF_CLIENT_SECRET=ReplaceMeWithAnafClientSecret
NUMQ_API_ANAF_ENVIRONMENT=production

# Revolut Business
NUMQ_API_REVOLUT_API_KEY=ReplaceMeWithRevolutAPIKey
NUMQ_API_REVOLUT_SANDBOX=false

# BNR (Curs valutar)
NUMQ_API_BNR_ENDPOINT_URL=https://www.bnr.ro/nbrfxrates.xml

# -- CONTABILITATE ROMÂNEASCĂ --
NUMQ_ACCOUNTING_PLAN_CONTURI=OMFP_1802_2014
NUMQ_ACCOUNTING_TVA_ENABLED=true
NUMQ_ACCOUNTING_SAFT_ENABLED=true

# -- E-FACTURA --
NUMQ_EFACTURA_ENABLED=true
NUMQ_EFACTURA_AUTO_UPLOAD=true

# -- HR & PAYROLL --
NUMQ_HR_PAYROLL_ENABLED=true
NUMQ_HR_REGES_INTEGRATION=true

# -- URL-URI SERVICII INTERNE --
NUMQ_SVC_CP_IDENTITY_URL=http://identity:6250
NUMQ_SVC_CP_LICENSING_URL=http://licensing:6300

# -- OBSERVABILITATE --
NUMQ_OBS_OTEL_ENDPOINT=${SUITE_OBS_OTEL_COLLECTOR_GRPC_URL}

