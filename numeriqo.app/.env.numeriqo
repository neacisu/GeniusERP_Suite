# ============================================
# NUMERIQO - FINANCIAL MANAGEMENT & ACCOUNTING
# ============================================
# Numeriqo-specific configuration
# Local overrides: numeriqo.app/.env.local (gitignored)
# Production: numeriqo.app/.env.production (gitignored)

# ===== APPLICATION IDENTITY =====
PORT=3105
SERVICE_NAME=numeriqo
SERVICE_VERSION=1.0.0

# ===== ACCOUNTING STANDARDS =====
NUMERIQO_ACCOUNTING_STANDARD=ifrs # ifrs | us-gaap | local-gaap
NUMERIQO_COUNTRY_CODE=RO
NUMERIQO_CURRENCY=RON
NUMERIQO_FISCAL_YEAR_START_MONTH=1

# ===== GENERAL LEDGER =====
NUMERIQO_ENABLE_MULTI_CURRENCY=true
NUMERIQO_ENABLE_COST_CENTERS=true
NUMERIQO_ENABLE_PROFIT_CENTERS=true
NUMERIQO_ENABLE_DEPARTMENTS=true
NUMERIQO_CHART_OF_ACCOUNTS_CODE_FORMAT=NNNNNN # Configurable format

# ===== ACCOUNTS PAYABLE (AP) =====
NUMERIQO_ENABLE_VENDOR_INVOICING=true
NUMERIQO_ENABLE_PURCHASE_ORDERS=true
NUMERIQO_ENABLE_EXPENSE_MANAGEMENT=true
NUMERIQO_ENABLE_INVOICE_AUTOMATION=false
NUMERIQO_ENABLE_THREE_WAY_MATCH=true # PO-Receipt-Invoice
NUMERIQO_AP_PAYMENT_TERMS_DEFAULT=NET30

# ===== ACCOUNTS RECEIVABLE (AR) =====
NUMERIQO_ENABLE_CUSTOMER_INVOICING=true
NUMERIQO_ENABLE_SALES_ORDERS=true
NUMERIQO_ENABLE_RECURRING_BILLING=false
NUMERIQO_ENABLE_COLLECTIONS_MANAGEMENT=true
NUMERIQO_ENABLE_CREDIT_MEMO=true
NUMERIQO_AR_PAYMENT_TERMS_DEFAULT=NET30

# ===== BANKING & PAYMENTS =====
NUMERIQO_ENABLE_BANK_RECONCILIATION=true
NUMERIQO_ENABLE_MULTI_BANK_ACCOUNTS=true
NUMERIQO_ENABLE_CHECK_MANAGEMENT=true
NUMERIQO_ENABLE_ACH_PAYMENTS=false
NUMERIQO_ENABLE_WIRE_TRANSFERS=false
NUMERIQO_BANK_FEED_PROVIDER=none # none | plaid | finicity | custom

# ===== FIXED ASSETS =====
NUMERIQO_ENABLE_FIXED_ASSET_MANAGEMENT=true
NUMERIQO_ENABLE_DEPRECIATION_CALCULATION=true
NUMERIQO_DEPRECIATION_METHOD=straight-line # straight-line | declining-balance | units-of-production
NUMERIQO_ENABLE_ASSET_TAGGING=true

# ===== CASH FLOW =====
NUMERIQO_ENABLE_CASH_FLOW_FORECASTING=true
NUMERIQO_ENABLE_LIQUIDITY_ANALYSIS=true
NUMERIQO_ENABLE_WORKING_CAPITAL_ANALYSIS=true

# ===== FINANCIAL REPORTING =====
NUMERIQO_ENABLE_STANDARD_REPORTS=true
NUMERIQO_ENABLE_CUSTOM_REPORTS=true
NUMERIQO_ENABLE_CONSOLIDATED_REPORTING=false
NUMERIQO_ENABLE_SEGMENT_REPORTING=false
NUMERIQO_ENABLE_VARIANCE_ANALYSIS=true

# Report Types
NUMERIQO_REPORTS=balance-sheet,income-statement,cash-flow,general-ledger,trial-balance

# ===== TAX MANAGEMENT =====
NUMERIQO_ENABLE_TAX_MANAGEMENT=true
NUMERIQO_ENABLE_VAT_MANAGEMENT=true # Value Added Tax (EU)
NUMERIQO_VAT_RATE=0.19 # 19% in Romania
NUMERIQO_ENABLE_TAX_WITHHOLDING=true
NUMERIQO_ENABLE_SALES_TAX=false # US

# ===== AUDIT & COMPLIANCE =====
NUMERIQO_ENABLE_AUDIT_TRAIL=true
NUMERIQO_ENABLE_DOCUMENT_RETENTION=true
NUMERIQO_DOCUMENT_RETENTION_YEARS=7
NUMERIQO_ENABLE_SEGREGATION_OF_DUTIES=true
NUMERIQO_ENABLE_APPROVAL_WORKFLOWS=true

# ===== BUDGETING & FORECASTING =====
NUMERIQO_ENABLE_BUDGETING=true
NUMERIQO_ENABLE_FORECASTING=true
NUMERIQO_ENABLE_SCENARIO_PLANNING=false
NUMERIQO_BUDGET_CARRY_FORWARD=true

# ===== CONSOLIDATION (For Groups) =====
NUMERIQO_ENABLE_CONSOLIDATION=false
NUMERIQO_ENABLE_INTER_COMPANY_TRANSACTIONS=false
NUMERIQO_ENABLE_ELIMINATION_ENTRIES=false

# ===== INTEGRATIONS =====
NUMERIQO_ENABLE_SUITE_INTEGRATION=true
SUITE_SHELL_URL=http://localhost:3001
SUITE_LOGIN_URL=http://localhost:3003

# GeniusERP Integration (for master data)
NUMERIQO_ENABLE_GENIUSERP_INTEGRATION=true
GENIUSERP_API_URL=http://localhost:8000

# Cerniq Integration (for reporting)
NUMERIQO_ENABLE_CERNIQ_INTEGRATION=false
CERNIQ_API_URL=http://localhost:3101

# Banking APIs
NUMERIQO_PLAID_CLIENT_ID=
NUMERIQO_PLAID_CLIENT_SECRET=

# ===== PERFORMANCE =====
NUMERIQO_ENABLE_CALCULATION_CACHING=true
NUMERIQO_CACHE_TTL=3600
NUMERIQO_ENABLE_BACKGROUND_PROCESSING=true
NUMERIQO_BATCH_PROCESSING_TIMEOUT=300000

# ===== COMPLIANCE =====
NUMERIQO_ENABLE_GDPR_COMPLIANCE=true
NUMERIQO_ENABLE_SOX_COMPLIANCE=false
NUMERIQO_ENABLE_HIPAA_COMPLIANCE=false
