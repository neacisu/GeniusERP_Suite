#######################################################
# APLICAȚIE: CERNIQ - Data Mesh & BI Platform (CERNIQ)
# Sursă: Tabelul 5 - Interval 6550-6599
#######################################################

# -- CONFIGURARE APLICAȚIE --
# Portul intern al API-ului
CERNIQ_APP_PORT=6550
CERNIQ_APP_METRICS_PORT=6551
CERNIQ_APP_CONSUMER_PORT=6552
CERNIQ_APP_NODE_ENV=production

# -- BAZA DE DATE (Specifică 'cerniq') --
CERNIQ_DB_POSTGRES_URL=postgresql://cerniq_user:ReplaceMe@postgres_server:5432/cerniq_db

# -- AUTENTIFICARE --
CERNIQ_AUTH_IDENTITY_URL=http://identity:6250
CERNIQ_AUTH_JWT_SECRET=ReplaceMeWithStrongJWTSecretKey

# -- KAFKA (Data Products Consumers) --
CERNIQ_MQ_KAFKA_BROKERS=${SUITE_MQ_KAFKA_BROKERS}
CERNIQ_MQ_KAFKA_GROUP_ID=cerniq-consumers
CERNIQ_MQ_KAFKA_AUTO_OFFSET_RESET=earliest

# -- DATA MESH --
CERNIQ_DATA_MESH_ENABLED=true
CERNIQ_DATA_PRODUCTS_REGISTRY_URL=http://analytics-hub:6350/data-products

# -- SEMANTIC LAYER --
CERNIQ_SEMANTIC_LAYER_ENABLED=true
CERNIQ_SEMANTIC_CACHE_TTL=3600

# -- BI & DASHBOARDS --
CERNIQ_DASHBOARDS_ENABLED=true

# -- URL-URI SERVICII INTERNE --
CERNIQ_SVC_CP_IDENTITY_URL=http://identity:6250
CERNIQ_SVC_CP_ANALYTICS_URL=http://analytics-hub:6350

# -- OBSERVABILITATE --
CERNIQ_OBS_OTEL_ENDPOINT=${SUITE_OBS_OTEL_COLLECTOR_GRPC_URL}

