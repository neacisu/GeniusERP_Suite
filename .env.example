# ============================================
# GENIUSSUITE ROOT CONFIGURATION - TEMPLATE
# ============================================
# Copy this file to .env and fill in your values
# For local development: .env.local (gitignored)
# For production: .env.production (gitignored)

# ===== NODE ENVIRONMENT =====
NODE_ENV=development

# ===== DATABASE (Shared PostgreSQL) =====
DATABASE_URL=postgres://geniussuite:password@localhost:5432/geniussuite_db
DB_POOL_SIZE=20
DB_POOL_TIMEOUT=5000

# ===== REDIS (Shared Cache Layer) =====
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_CONNECT_TIMEOUT=5000

# ===== OPENTELEMETRY (Observability) =====
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_ENABLED=true
OTEL_LOG_LEVEL=info

# ===== LOGGING =====
LOG_LEVEL=debug
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# ===== SECURITY - SHARED INFRASTRUCTURE KEYS =====
# These are NOT application secrets, only for inter-service communication
# Generate with: openssl rand -base64 32
JWT_PUBLIC_KEY_PATH=./config/keys/jwt-public.pem
SESSION_ENCRYPTION_KEY=change-me-in-production

# ===== CORS & NETWORKING =====
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3100
API_GATEWAY_URL=http://localhost:3001
API_GATEWAY_PORT=3001
INTERNAL_API_SECRET=change-me-in-production

# ===== SERVICE MESH / INTER-SERVICE COMMUNICATION =====
SERVICE_MESH_ENABLED=false
SERVICE_DISCOVERY_URL=http://localhost:8500

# ===== MONITORING & ALERTING =====
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3000
ALERTMANAGER_URL=http://localhost:9093
