# ============================================
# FLOWXIFY - BUSINESS PROCESS MANAGEMENT & iPaaS
# ============================================
# Flowxify-specific configuration
# Local overrides: flowxify.app/.env.local (gitignored)
# Production: flowxify.app/.env.production (gitignored)

# ===== APPLICATION IDENTITY =====
PORT=3102
SERVICE_NAME=flowxify
SERVICE_VERSION=1.0.0

# ===== BPM ENGINE (Business Process Management) =====
FLOWXIFY_BPM_ENGINE=camunda # camunda | activiti | jbpm | custom
FLOWXIFY_CAMUNDA_REST_URL=http://localhost:8080/engine-rest
FLOWXIFY_CAMUNDA_REST_USER=admin
FLOWXIFY_CAMUNDA_REST_PASSWORD=change-me-in-production

# ===== WORKFLOW DESIGNER =====
FLOWXIFY_DESIGNER_PORT=3102
FLOWXIFY_ENABLE_DESIGNER=true
FLOWXIFY_DESIGNER_MAX_PROCESSES=1000
FLOWXIFY_DESIGNER_EXPORT_FORMATS=bpmn,dmn,cmmn

# ===== INTEGRATIONS & iPaaS =====
FLOWXIFY_ENABLE_WEBHOOKS=true
FLOWXIFY_WEBHOOK_TIMEOUT=30000
FLOWXIFY_MAX_CONCURRENT_WORKFLOWS=100
FLOWXIFY_WORKFLOW_TIMEOUT=3600000 # 1 hour

# ===== MESSAGE QUEUE / EVENT STREAMING =====
FLOWXIFY_MESSAGE_BROKER=kafka # kafka | rabbitmq | redis | nats
FLOWXIFY_KAFKA_BROKERS=localhost:9092
FLOWXIFY_KAFKA_CONSUMER_GROUP=flowxify-consumer
FLOWXIFY_KAFKA_TOPIC_PREFIX=flowxify-

# RabbitMQ Configuration (if FLOWXIFY_MESSAGE_BROKER=rabbitmq)
FLOWXIFY_RABBITMQ_URL=amqp://guest:guest@localhost:5672
FLOWXIFY_RABBITMQ_QUEUE_PREFIX=flowxify-

# ===== EXTERNAL SERVICE INTEGRATIONS =====
FLOWXIFY_ENABLE_HTTP_CONNECTOR=true
FLOWXIFY_ENABLE_DATABASE_CONNECTOR=true
FLOWXIFY_ENABLE_SFTP_CONNECTOR=true
FLOWXIFY_ENABLE_FTP_CONNECTOR=true
FLOWXIFY_ENABLE_SLACK_CONNECTOR=false
FLOWXIFY_ENABLE_EMAIL_CONNECTOR=true

# Slack Integration
FLOWXIFY_SLACK_BOT_TOKEN=
FLOWXIFY_SLACK_WEBHOOK_URL=

# Email Integration
FLOWXIFY_EMAIL_SMTP_HOST=smtp.example.com
FLOWXIFY_EMAIL_SMTP_PORT=587
FLOWXIFY_EMAIL_SMTP_USER=noreply@example.com
FLOWXIFY_EMAIL_SMTP_PASSWORD=

# ===== SCRIPTING & TEMPLATES =====
FLOWXIFY_ENABLE_JAVASCRIPT_SCRIPT_ENGINE=true
FLOWXIFY_ENABLE_GROOVY_SCRIPT_ENGINE=false
FLOWXIFY_ENABLE_PYTHON_SCRIPT_ENGINE=false
FLOWXIFY_SCRIPT_TIMEOUT=10000

# ===== MONITORING & EXECUTION TRACKING =====
FLOWXIFY_ENABLE_PROCESS_MONITORING=true
FLOWXIFY_ENABLE_AUDIT_LOG=true
FLOWXIFY_AUDIT_LOG_RETENTION_DAYS=365
FLOWXIFY_ENABLE_PERFORMANCE_METRICS=true

# ===== SUITE INTEGRATION =====
FLOWXIFY_ENABLE_SUITE_INTEGRATION=true
SUITE_SHELL_URL=http://localhost:3001
SUITE_LOGIN_URL=http://localhost:3003

# Archify Integration (for document handling in workflows)
FLOWXIFY_ENABLE_ARCHIFY_INTEGRATION=false
ARCHIFY_API_URL=http://localhost:3100

# Cerniq Integration (for analytics on workflows)
FLOWXIFY_ENABLE_CERNIQ_INTEGRATION=false
CERNIQ_API_URL=http://localhost:3101

# ===== ERROR HANDLING & RETRIES =====
FLOWXIFY_MAX_RETRIES=3
FLOWXIFY_RETRY_DELAY=5000
FLOWXIFY_DEADLETTER_QUEUE_ENABLED=true

# ===== PERFORMANCE & CACHING =====
FLOWXIFY_CACHE_ENABLED=true
FLOWXIFY_CACHE_TTL=3600
FLOWXIFY_ENABLE_COMPRESSION=true
