#######################################################
# APLICAȚIE: FLOWXIFY - BPM + Collaboration (FLOWX)
# Sursă: Tabelul 5 - Interval 6600-6649
#######################################################

# -- CONFIGURARE APLICAȚIE --
# Portul intern al API-ului
FLOWX_APP_PORT=6600
FLOWX_APP_METRICS_PORT=6601
FLOWX_APP_REALTIME_GATEWAY_PORT=6602
FLOWX_APP_NODE_ENV=production

# -- BAZA DE DATE (Specifică 'flowxify') --
FLOWX_DB_POSTGRES_URL=postgresql://flowxify_user:ReplaceMe@postgres_server:5432/flowxify_db

# -- AUTENTIFICARE --
FLOWX_AUTH_IDENTITY_URL=http://identity:6250
FLOWX_AUTH_JWT_SECRET=ReplaceMeWithStrongJWTSecretKey

# -- TEMPORAL (BPM Workflows) --
FLOWX_BPM_TEMPORAL_URL=${SUITE_BPM_TEMPORAL_HOST_PORT}
FLOWX_BPM_TASK_QUEUE=flowxify-tasks

# -- KAFKA (Events) --
FLOWX_MQ_KAFKA_BROKERS=${SUITE_MQ_KAFKA_BROKERS}
FLOWX_MQ_KAFKA_TOPIC_WORKFLOWS=flowxify.workflows
FLOWX_MQ_KAFKA_TOPIC_NOTIFICATIONS=flowxify.notifications

# -- COLLABORATION --
FLOWX_COLLAB_REALTIME_ENABLED=true
FLOWX_COLLAB_MAX_CONNECTIONS=1000

# -- MESAGERIE INTERNĂ --
FLOWX_MESSAGING_ENABLED=true
FLOWX_MESSAGING_MAX_ATTACHMENT_SIZE=52428800

# -- URL-URI SERVICII INTERNE --
FLOWX_SVC_CP_IDENTITY_URL=http://identity:6250
FLOWX_SVC_CP_LICENSING_URL=http://licensing:6300

# -- OBSERVABILITATE --
FLOWX_OBS_OTEL_ENDPOINT=${SUITE_OBS_OTEL_COLLECTOR_GRPC_URL}

