# ============================================
# GENIUSERP - UNIFIED ERP ORCHESTRATOR
# ============================================
# GeniusERP-specific configuration
# Local overrides: geniuserp.app/.env.local (gitignored)
# Production: geniuserp.app/.env.production (gitignored)

# ===== APPLICATION IDENTITY =====
PORT=3108
SERVICE_NAME=geniuserp
SERVICE_VERSION=1.0.0

# ===== CORE ERP MODULES =====
# Which modules are enabled in this ERP instance
GENIUSERP_ENABLE_ACCOUNTING=true
GENIUSERP_ENABLE_INVENTORY=true
GENIUSERP_ENABLE_SALES=true
GENIUSERP_ENABLE_PURCHASING=true
GENIUSERP_ENABLE_HR=true
GENIUSERP_ENABLE_CRM=true
GENIUSERP_ENABLE_ASSETS=true
GENIUSERP_ENABLE_MRP=false # Manufacturing Resource Planning

# ===== COMPANY & ORGANIZATION =====
GENIUSERP_COMPANY_ID=primary
GENIUSERP_COMPANY_NAME=GeniusERP
GENIUSERP_ENABLE_MULTI_COMPANY=true
GENIUSERP_MAX_COMPANIES=10
GENIUSERP_ENABLE_BRANCHES=true
GENIUSERP_ENABLE_DEPARTMENTS=true
GENIUSERP_ENABLE_COST_CENTERS=true

# ===== SECURITY & AUTHORIZATION =====
GENIUSERP_ENABLE_ROLE_BASED_ACCESS=true
GENIUSERP_ENABLE_ROW_LEVEL_SECURITY=true
GENIUSERP_ENABLE_FIELD_LEVEL_SECURITY=true
GENIUSERP_ENABLE_DOCUMENT_LEVEL_SECURITY=true
GENIUSERP_ENABLE_AUDIT_LOG=true
GENIUSERP_AUDIT_LOG_RETENTION_DAYS=2555

# ===== MASTER DATA MANAGEMENT =====
GENIUSERP_ENABLE_CUSTOMER_MASTER=true
GENIUSERP_ENABLE_VENDOR_MASTER=true
GENIUSERP_ENABLE_PRODUCT_MASTER=true
GENIUSERP_ENABLE_GL_ACCOUNT_MASTER=true
GENIUSERP_ENABLE_EMPLOYEE_MASTER=true

# Data Quality
GENIUSERP_ENABLE_DATA_VALIDATION=true
GENIUSERP_ENABLE_DATA_DEDUPLICATION=true
GENIUSERP_ENABLE_DATA_CLEANSING=false

# ===== DOCUMENT MANAGEMENT =====
GENIUSERP_ENABLE_DOCUMENT_VERSIONING=true
GENIUSERP_ENABLE_DIGITAL_SIGNATURES=false
GENIUSERP_ENABLE_DOCUMENT_WORKFLOWS=true
GENIUSERP_ENABLE_DOCUMENT_ARCHIVING=true

# ===== REPORTING & ANALYTICS =====
GENIUSERP_ENABLE_STANDARD_REPORTS=true
GENIUSERP_ENABLE_CUSTOM_REPORTS=true
GENIUSERP_ENABLE_ADHOC_QUERIES=true
GENIUSERP_ENABLE_DASHBOARDS=true
GENIUSERP_ENABLE_KPI_TRACKING=true
GENIUSERP_ENABLE_ALERTS=true

# ===== WORKFLOW ENGINE =====
GENIUSERP_ENABLE_APPROVAL_WORKFLOWS=true
GENIUSERP_ENABLE_DOCUMENT_WORKFLOWS=true
GENIUSERP_ENABLE_CUSTOM_WORKFLOWS=true
GENIUSERP_WORKFLOW_ENGINE=flowxify # flowxify | internal | camunda

# ===== NOTIFICATIONS & COMMUNICATIONS =====
GENIUSERP_ENABLE_EMAIL_NOTIFICATIONS=true
GENIUSERP_ENABLE_SMS_NOTIFICATIONS=false
GENIUSERP_ENABLE_IN_APP_NOTIFICATIONS=true
GENIUSERP_ENABLE_PUSH_NOTIFICATIONS=true

# ===== DATA EXCHANGE =====
GENIUSERP_ENABLE_IMPORT_EXPORT=true
GENIUSERP_ENABLE_BULK_OPERATIONS=true
GENIUSERP_ENABLE_API_INTEGRATION=true
GENIUSERP_ENABLE_WEB_SERVICES=true

# ===== COMPLIANCE =====
GENIUSERP_ENABLE_GDPR_COMPLIANCE=true
GENIUSERP_ENABLE_SOX_COMPLIANCE=false
GENIUSERP_ENABLE_HIPAA_COMPLIANCE=false
GENIUSERP_ENABLE_REGULATORY_REPORTING=true

# ===== BACKUP & RECOVERY =====
GENIUSERP_ENABLE_AUTOMATED_BACKUP=true
GENIUSERP_BACKUP_FREQUENCY=daily # hourly | daily | weekly
GENIUSERP_BACKUP_RETENTION_DAYS=30
GENIUSERP_ENABLE_POINT_IN_TIME_RECOVERY=true

# ===== PERFORMANCE =====
GENIUSERP_CACHE_ENABLED=true
GENIUSERP_CACHE_TTL=3600
GENIUSERP_ENABLE_ASYNC_PROCESSING=true
GENIUSERP_ENABLE_BATCH_PROCESSING=true
GENIUSERP_BATCH_TIMEOUT=600000 # 10 minutes
GENIUSERP_MAX_BATCH_SIZE=10000

# ===== EXTERNAL INTEGRATIONS =====
GENIUSERP_ENABLE_SUITE_INTEGRATION=true
SUITE_SHELL_URL=http://localhost:3001
SUITE_LOGIN_URL=http://localhost:3003

# Numeriqo Integration (for accounting)
GENIUSERP_ENABLE_NUMERIQO_INTEGRATION=true
NUMERIQO_API_URL=http://localhost:3105

# i-WMS Integration (for inventory)
GENIUSERP_ENABLE_IWMS_INTEGRATION=false
IWMS_API_URL=http://localhost:3103

# Mercantiq Integration (for e-commerce)
GENIUSERP_ENABLE_MERCANTIQ_INTEGRATION=false
MERCANTIQ_API_URL=http://localhost:3104

# Vettify Integration (for CRM)
GENIUSERP_ENABLE_VETTIFY_INTEGRATION=false
VETTIFY_API_URL=http://localhost:3107

# Cerniq Integration (for analytics)
GENIUSERP_ENABLE_CERNIQ_INTEGRATION=true
CERNIQ_API_URL=http://localhost:3101

# Flowxify Integration (for workflow automation)
GENIUSERP_ENABLE_FLOWXIFY_INTEGRATION=false
FLOWXIFY_API_URL=http://localhost:3102

# Archify Integration (for document management)
GENIUSERP_ENABLE_ARCHIFY_INTEGRATION=false
ARCHIFY_API_URL=http://localhost:3100

# ===== DEVELOPMENT MODE =====
GENIUSERP_ENABLE_DEBUG_MODE=false
GENIUSERP_ENABLE_PERFORMANCE_PROFILING=false
GENIUSERP_ENABLE_SQL_LOGGING=false
