#######################################################
# APLICAȚIE: GENIUSERP - Suite Orchestrator & Public Site (GENERP)
# Sursă: Tabelul 5 - Interval 6050-6099
#######################################################

# -- CONFIGURARE APLICAȚIE --
# Portul intern al API-ului BFF Public
GENERP_APP_PORT=6050
GENERP_APP_METRICS_PORT=6051
GENERP_APP_NODE_ENV=production

# -- BAZA DE DATE (Specifică 'geniuserp') --
GENERP_DB_POSTGRES_URL=postgresql://geniuserp_user:ReplaceMe@postgres_server:5432/geniuserp_db

# -- AUTENTIFICARE --
GENERP_AUTH_IDENTITY_URL=http://identity:6250
GENERP_AUTH_JWT_SECRET=ReplaceMeWithStrongJWTSecretKey

# -- PUBLIC WEBSITE --
GENERP_WEBSITE_ENABLED=true
GENERP_WEBSITE_BLOG_ENABLED=true
GENERP_WEBSITE_DOCS_ENABLED=true

# -- CUSTOMER PORTAL --
GENERP_PORTAL_ENABLED=true
GENERP_PORTAL_WORKSPACE_SELECTOR=true
GENERP_PORTAL_SSO_ENABLED=true

# -- TENANT OPERATIONS --
GENERP_TENANT_PROVISIONING_ENABLED=true
GENERP_TENANT_SUBDOMAIN_PATTERN={tenant}.geniuserp.app

# -- STATUS PAGE --
GENERP_STATUS_PAGE_ENABLED=true
GENERP_STATUS_RSS_ENABLED=true

# -- URL-URI SERVICII INTERNE --
GENERP_SVC_CP_IDENTITY_URL=http://identity:6250
GENERP_SVC_CP_LICENSING_URL=http://licensing:6300
GENERP_SVC_SUITE_SHELL_URL=http://suite-shell:6100

# -- OBSERVABILITATE --
GENERP_OBS_OTEL_ENDPOINT=${SUITE_OBS_OTEL_COLLECTOR_GRPC_URL}

