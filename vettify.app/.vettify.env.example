#######################################################
# APLICAȚIE: VETTIFY - CRM & Firmographics (VETFY)
# Sursă: Tabelul 5 - Interval 6850-6899
#######################################################

# -- CONFIGURARE APLICAȚIE --
# Portul intern al API-ului
VETFY_APP_PORT=6850
VETFY_APP_METRICS_PORT=6851
VETFY_APP_GRAPH_PORT=6852
VETFY_APP_NODE_ENV=production

# -- BAZA DE DATE (Specifică 'vettify') --
VETFY_DB_POSTGRES_URL=postgresql://vettify_user:ReplaceMe@postgres_server:5432/vettify_db

# -- GRAPH DATABASE (Neo4j pentru relații) --
VETFY_DB_NEO4J_URI=bolt://neo4j:7687
VETFY_DB_NEO4J_USER=neo4j
VETFY_DB_NEO4J_PASS=ReplaceMeWithNeo4jPassword

# -- AUTENTIFICARE --
VETFY_AUTH_IDENTITY_URL=http://identity:6250
VETFY_AUTH_JWT_SECRET=ReplaceMeWithStrongJWTSecretKey

# -- FIRMOGRAPHICS --
VETFY_FIRMOGRAPHICS_ENABLED=true

# -- INTEGRĂRI ANAF --
VETFY_API_ANAF_CLIENT_ID=ReplaceMeWithAnafClientID
VETFY_API_ANAF_CLIENT_SECRET=ReplaceMeWithAnafClientSecret
VETFY_API_ANAF_AUTO_VERIFY_CUI=true

# -- VERIFICARE TERMENE PLATĂ --
VETFY_PAYMENT_TERMS_TRACKING=true
VETFY_PAYMENT_TERMS_ALERTS=true

# -- CRM --
VETFY_CRM_PIPELINE_ENABLED=true
VETFY_CRM_ACTIVITIES_ENABLED=true
VETFY_CRM_CONTACTS_ENABLED=true

# -- URL-URI SERVICII INTERNE --
VETFY_SVC_CP_IDENTITY_URL=http://identity:6250
VETFY_SVC_CP_ANALYTICS_URL=http://analytics-hub:6350

# -- OBSERVABILITATE --
VETFY_OBS_OTEL_ENDPOINT=${SUITE_OBS_OTEL_COLLECTOR_GRPC_URL}

