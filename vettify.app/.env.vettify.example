# ============================================
# VETTIFY - CUSTOMER & VENDOR MANAGEMENT
# ============================================
# Vettify-specific configuration
# Local overrides: vettify.app/.env.local (gitignored)
# Production: vettify.app/.env.production (gitignored)

# ===== APPLICATION IDENTITY =====
PORT=3107
SERVICE_NAME=vettify
SERVICE_VERSION=1.0.0

# ===== CUSTOMER MANAGEMENT =====
VETTIFY_ENABLE_CUSTOMER_CRM=true
VETTIFY_ENABLE_CUSTOMER_SEGMENTATION=true
VETTIFY_ENABLE_CUSTOMER_SCORING=true
VETTIFY_ENABLE_CUSTOMER_PROFILING=true
VETTIFY_CUSTOMER_LIFECYCLE_STAGES=prospect,lead,customer,vip,inactive

# ===== CONTACT MANAGEMENT =====
VETTIFY_ENABLE_CONTACT_MANAGEMENT=true
VETTIFY_ENABLE_CONTACT_DEDUPLICATION=true
VETTIFY_ENABLE_CONTACT_ENRICHMENT=false
VETTIFY_MAX_CONTACTS_PER_CUSTOMER=100
VETTIFY_ENABLE_RELATIONSHIP_MANAGEMENT=true

# ===== VENDOR/SUPPLIER MANAGEMENT =====
VETTIFY_ENABLE_VENDOR_MANAGEMENT=true
VETTIFY_ENABLE_VENDOR_ONBOARDING=true
VETTIFY_ENABLE_VENDOR_VETTING=true
VETTIFY_ENABLE_VENDOR_PERFORMANCE_TRACKING=true
VETTIFY_ENABLE_VENDOR_SCORING=true

# Vendor Vetting
VETTIFY_VENDOR_VETTING_WORKFLOW=standard # standard | enhanced | comprehensive
VETTIFY_ENABLE_BACKGROUND_CHECK=false
VETTIFY_ENABLE_FINANCIAL_REVIEW=true
VETTIFY_ENABLE_COMPLIANCE_CHECK=true
VETTIFY_ENABLE_REFERENCE_CHECK=false

# ===== COMMUNICATION MANAGEMENT =====
VETTIFY_ENABLE_INTERACTION_TRACKING=true
VETTIFY_ENABLE_EMAIL_TRACKING=true
VETTIFY_ENABLE_CALL_TRACKING=false
VETTIFY_ENABLE_CHAT_MANAGEMENT=true
VETTIFY_ENABLE_SOCIAL_MEDIA_MANAGEMENT=false

# ===== SALES AUTOMATION =====
VETTIFY_ENABLE_SALES_PIPELINE_MANAGEMENT=true
VETTIFY_ENABLE_OPPORTUNITY_MANAGEMENT=true
VETTIFY_ENABLE_SALES_FORECASTING=true
VETTIFY_ENABLE_ACTIVITY_MANAGEMENT=true
VETTIFY_ENABLE_TASK_MANAGEMENT=true

# ===== MARKETING AUTOMATION =====
VETTIFY_ENABLE_MARKETING_CAMPAIGNS=true
VETTIFY_ENABLE_EMAIL_CAMPAIGNS=true
VETTIFY_ENABLE_DRIP_CAMPAIGNS=true
VETTIFY_ENABLE_LEAD_SCORING=true
VETTIFY_ENABLE_LEAD_NURTURING=true

# ===== QUOTE & ORDER MANAGEMENT =====
VETTIFY_ENABLE_QUOTE_MANAGEMENT=true
VETTIFY_ENABLE_ORDER_MANAGEMENT=true
VETTIFY_ENABLE_CONTRACT_MANAGEMENT=true
VETTIFY_ENABLE_ORDER_TRACKING=true

# ===== SUPPORT & SERVICE =====
VETTIFY_ENABLE_SUPPORT_TICKETS=true
VETTIFY_ENABLE_TICKET_ROUTING=true
VETTIFY_ENABLE_KNOWLEDGE_BASE=true
VETTIFY_ENABLE_SELF_SERVICE_PORTAL=true
VETTIFY_ENABLE_SLA_MANAGEMENT=true

# ===== INTEGRATIONS =====
VETTIFY_ENABLE_SUITE_INTEGRATION=true
SUITE_SHELL_URL=http://localhost:3001
SUITE_LOGIN_URL=http://localhost:3003

# GeniusERP Integration (for orders & customers)
VETTIFY_ENABLE_GENIUSERP_INTEGRATION=true
GENIUSERP_API_URL=http://localhost:8000

# Mercantiq Integration (for e-commerce customers)
VETTIFY_ENABLE_MERCANTIQ_INTEGRATION=false
MERCANTIQ_API_URL=http://localhost:3104

# Cerniq Integration (for customer analytics)
VETTIFY_ENABLE_CERNIQ_INTEGRATION=false
CERNIQ_API_URL=http://localhost:3101

# Email Integration
VETTIFY_EMAIL_PROVIDER=sendgrid # sendgrid | mailgun | mailchimp
VETTIFY_SENDGRID_API_KEY=
VETTIFY_MAILGUN_API_KEY=

# Slack Integration (for notifications)
VETTIFY_ENABLE_SLACK_INTEGRATION=false
VETTIFY_SLACK_WEBHOOK_URL=

# ===== REPORTING & ANALYTICS =====
VETTIFY_ENABLE_CUSTOMER_ANALYTICS=true
VETTIFY_ENABLE_SALES_ANALYTICS=true
VETTIFY_ENABLE_PERFORMANCE_REPORTS=true
VETTIFY_ENABLE_CUSTOM_DASHBOARDS=true
VETTIFY_ENABLE_PREDICTIVE_ANALYTICS=false

# ===== DATA & PRIVACY =====
VETTIFY_ENABLE_GDPR_COMPLIANCE=true
VETTIFY_ENABLE_CCPA_COMPLIANCE=false
VETTIFY_ENABLE_DATA_EXPORT=true
VETTIFY_ENABLE_DATA_DELETION=true
VETTIFY_DATA_RETENTION_DAYS=2555 # 7 years

# ===== PERFORMANCE =====
VETTIFY_CACHE_ENABLED=true
VETTIFY_CACHE_TTL=3600
VETTIFY_ENABLE_SEARCH_OPTIMIZATION=true
VETTIFY_ENABLE_FULL_TEXT_SEARCH=true

# ===== SECURITY =====
VETTIFY_ENABLE_ROW_LEVEL_SECURITY=true
VETTIFY_ENABLE_FIELD_LEVEL_SECURITY=true
VETTIFY_ENABLE_AUDIT_LOG=true
