# ============================================
# ARCHIFY - DOCUMENT MANAGEMENT SYSTEM
# ============================================
# Archify-specific configuration
# Local overrides: archify.app/.env.local (gitignored)
# Production: archify.app/.env.production (gitignored)

# ===== APPLICATION IDENTITY =====
PORT=3100
SERVICE_NAME=archify
SERVICE_VERSION=1.0.0

# ===== DOCUMENT STORAGE =====
ARCHIFY_MAX_FILE_SIZE=104857600 # 100MB
ARCHIFY_STORAGE_TYPE=local # local | s3 | azure-blob | gcs
ARCHIFY_STORAGE_PATH=/data/archify/documents
ARCHIFY_TEMP_PATH=/tmp/archify
ARCHIFY_STORAGE_ENCRYPTION=true

# S3 Configuration (if ARCHIFY_STORAGE_TYPE=s3)
ARCHIFY_S3_BUCKET=geniussuite-archify-docs
ARCHIFY_S3_REGION=us-east-1
ARCHIFY_S3_ACCESS_KEY_ID=
ARCHIFY_S3_SECRET_ACCESS_KEY=

# Azure Blob Configuration (if ARCHIFY_STORAGE_TYPE=azure-blob)
ARCHIFY_AZURE_STORAGE_ACCOUNT=
ARCHIFY_AZURE_STORAGE_ACCOUNT_KEY=
ARCHIFY_AZURE_CONTAINER_NAME=documents

# ===== OCR & DOCUMENT PROCESSING =====
ARCHIFY_OCR_ENABLED=false
ARCHIFY_OCR_PROVIDER=google-vision # google-vision | aws-textract | azure-cv | tesseract
ARCHIFY_OCR_API_KEY= # Set in .env.local for dev
ARCHIFY_OCR_CONFIDENCE_THRESHOLD=0.85
ARCHIFY_OCR_LANGUAGE=ro,en

# ===== FULL-TEXT SEARCH =====
ARCHIFY_SEARCH_ENABLED=true
ARCHIFY_SEARCH_ENGINE=postgres # postgres | elasticsearch | meilisearch
ARCHIFY_ELASTICSEARCH_URL=http://localhost:9200
ARCHIFY_ELASTICSEARCH_USERNAME=
ARCHIFY_ELASTICSEARCH_PASSWORD=

# ===== DOCUMENT VERSIONING =====
ARCHIFY_VERSIONING_ENABLED=true
ARCHIFY_MAX_VERSIONS_PER_DOC=10
ARCHIFY_VERSION_RETENTION_DAYS=365

# ===== DOCUMENT CLASSIFICATION =====
ARCHIFY_AUTO_CLASSIFICATION_ENABLED=false
ARCHIFY_CLASSIFICATION_MODEL=archify-doc-classifier-v1
ARCHIFY_CLASSIFICATION_CONFIDENCE_THRESHOLD=0.8

# ===== PERMISSIONS & SHARING =====
ARCHIFY_SHARE_EXPIRY_DAYS=30
ARCHIFY_ENABLE_PUBLIC_SHARES=false
ARCHIFY_ENABLE_EXTERNAL_SHARING=true
ARCHIFY_SHARE_PASSWORD_PROTECTION=true

# ===== AUDIT & COMPLIANCE =====
ARCHIFY_AUDIT_ENABLED=true
ARCHIFY_AUDIT_LOG_RETENTION_DAYS=2555 # 7 years for compliance
ARCHIFY_ENABLE_GDPR_COMPLIANCE=true

# ===== INTEGRATIONS WITH OTHER APPS =====
ARCHIFY_ENABLE_SUITE_INTEGRATION=true
SUITE_SHELL_URL=http://localhost:3001
SUITE_LOGIN_URL=http://localhost:3003

# Cerniq Integration (for BI/reporting on documents)
ARCHIFY_ENABLE_CERNIQ_INTEGRATION=false
CERNIQ_API_URL=http://localhost:3101

# Flowxify Integration (for workflow automation with documents)
ARCHIFY_ENABLE_FLOWXIFY_INTEGRATION=false
FLOWXIFY_API_URL=http://localhost:3102

# ===== PERFORMANCE & CACHING =====
ARCHIFY_CACHE_ENABLED=true
ARCHIFY_CACHE_TTL=3600
ARCHIFY_ENABLE_COMPRESSION=true
ARCHIFY_COMPRESSION_MIN_SIZE=1024

# ===== NOTIFICATIONS =====
ARCHIFY_NOTIFICATIONS_ENABLED=true
ARCHIFY_NOTIFY_ON_DOCUMENT_UPLOAD=true
ARCHIFY_NOTIFY_ON_DOCUMENT_SHARE=true
ARCHIFY_NOTIFICATION_CHANNELS=email,in-app
