#######################################################
# APLICAȚIE: ARCHIFY - Document Management System (ARCHY)
# Sursă: Tabelul 5 - Interval 6500-6549
#######################################################

# -- CONFIGURARE APLICAȚIE --
# Portul intern al API-ului
ARCHY_APP_PORT=6500
ARCHY_APP_METRICS_PORT=6501
ARCHY_APP_WORKER_PORT=6502
ARCHY_APP_NODE_ENV=production

# -- BAZA DE DATE (Specifică 'archify') --
ARCHY_DB_POSTGRES_URL=postgresql://archify_user:ReplaceMe@postgres_server:5432/archify_db

# -- AUTENTIFICARE --
ARCHY_AUTH_IDENTITY_URL=http://identity:6250
ARCHY_AUTH_JWT_SECRET=ReplaceMeWithStrongJWTSecretKey

# -- STOCARE FIȘIERE --
ARCHY_STORAGE_TYPE=local
ARCHY_STORAGE_LOCAL_PATH=/var/archify/documents
ARCHY_STORAGE_MAX_FILE_SIZE=104857600

# MinIO (opțional)
ARCHY_STORAGE_MINIO_ENDPOINT=http://minio:9000
ARCHY_STORAGE_MINIO_ACCESS_KEY=ReplaceMeWithMinIOAccessKey
ARCHY_STORAGE_MINIO_SECRET_KEY=ReplaceMeWithMinIOSecretKey
ARCHY_STORAGE_MINIO_BUCKET=archify-documents

# -- OCR & PROCESARE --
ARCHY_OCR_ENABLED=true
ARCHY_OCR_ENGINE=tesseract
ARCHY_OCR_LANGUAGES=ron,eng

# -- VERSIONARE --
ARCHY_VERSIONING_ENABLED=true
ARCHY_VERSIONING_MAX_VERSIONS=10

# -- URL-URI SERVICII INTERNE --
ARCHY_SVC_CP_IDENTITY_URL=http://identity:6250
ARCHY_SVC_CP_LICENSING_URL=http://licensing:6300
ARCHY_SVC_CP_AI_URL=http://ai-hub:6400

# -- OBSERVABILITATE --
ARCHY_OBS_OTEL_ENDPOINT=${SUITE_OBS_OTEL_COLLECTOR_GRPC_URL}

