# Observability Environment Variables
# Copy this to your .env file and adjust as needed

# OpenTelemetry Service Name
OTEL_SERVICE_NAME=genius-suite-service

# OTLP Exporter Endpoints
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318/v1/traces
# OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=otel-collector:4317
# OTEL_EXPORTER_OTLP_LOGS_ENDPOINT=http://otel-collector:4318/v1/logs
# OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://otel-collector:4318/v1/metrics

# Optional: Disable auto-instrumentation for specific libraries
# OTEL_NODEJS_TRACER_PROVIDER_OPTIONS=ignoreLib: ['@opentelemetry/instrumentation-openai']

# Optional: Log level for OTEL
# OTEL_LOG_LEVEL=INFO