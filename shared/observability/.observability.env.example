#######################################################
# INFRASTRUCTURĂ: OBSERVABILITATE (OBS)
# Sursă: Tabelul 4 - Stack Observabilitate
#######################################################

# -- SECRETE SERVICII --
OBS_GRAFANA_ADMIN_USER=admin
OBS_GRAFANA_ADMIN_PASS=ReplaceMeWithSecureGrafanaPassword

OBS_PROMETHEUS_ADMIN_USER=admin
OBS_PROMETHEUS_ADMIN_PASS=ReplaceMeWithSecurePrometheusPassword

# -- CONFIGURARE PORTURI --
# Porturile pe care serviciile stack-ului ascultă
OBS_GRAFANA_PORT=3000
OBS_PROMETHEUS_PORT=9090
OBS_LOKI_PORT=3100
OBS_TEMPO_PORT=3100
OBS_OTEL_GRPC_PORT=4317
OBS_OTEL_HTTP_PORT=4318

# Domenii expuse prin Traefik (pot fi suprascrise per mediu)
OBS_GRAFANA_DOMAIN=grafana.geniuserp.app
OBS_PROMETHEUS_DOMAIN=prometheus.geniuserp.app

# -- CONFIGURARE RETENȚIE DATE --
# Prometheus
OBS_PROMETHEUS_RETENTION_TIME=15d
OBS_PROMETHEUS_RETENTION_SIZE=50GB

# Loki
OBS_LOKI_RETENTION_PERIOD=168h
OBS_LOKI_COMPACTION_INTERVAL=10m

# Tempo
OBS_TEMPO_RETENTION_DURATION=720h

# -- CONFIGURARE SCRAPERS --
OBS_PROMETHEUS_SCRAPE_INTERVAL=15s
OBS_PROMETHEUS_SCRAPE_TIMEOUT=10s

# -- REȚEA --
OBS_NETWORK=net_observability

