#######################################################
# APLICAȚIE: TRIGGERRA - Marketing Automation (TRIGR)
# Sursă: Tabelul 5 - Interval 6800-6849
#######################################################

# -- CONFIGURARE APLICAȚIE --
# Portul intern al API-ului
TRIGR_APP_PORT=6800
TRIGR_APP_METRICS_PORT=6801
TRIGR_APP_ENGINES_PORT=6802
TRIGR_APP_NODE_ENV=production

# -- BAZA DE DATE (Specifică 'triggerra') --
TRIGR_DB_POSTGRES_URL=postgresql://triggerra_user:ReplaceMe@postgres_server:5432/triggerra_db

# -- AUTENTIFICARE --
TRIGR_AUTH_IDENTITY_URL=http://identity:6250
TRIGR_AUTH_JWT_SECRET=ReplaceMeWithStrongJWTSecretKey

# -- KAFKA (Evenimente campanii) --
TRIGR_MQ_KAFKA_BROKERS=${SUITE_MQ_KAFKA_BROKERS}
TRIGR_MQ_KAFKA_TOPIC_CAMPAIGNS=triggerra.campaigns
TRIGR_MQ_KAFKA_TOPIC_JOURNEYS=triggerra.journeys

# -- CAMPANII --
TRIGR_CAMPAIGNS_ENABLED=true
TRIGR_CAMPAIGNS_MAX_CONCURRENT=50

# -- JOURNEYS --
TRIGR_JOURNEYS_ENABLED=true
TRIGR_JOURNEYS_ENGINE=temporal

# -- COMUNICAȚII --
# Email
TRIGR_COMMS_EMAIL_ENABLED=true
TRIGR_COMMS_EMAIL_PROVIDER=smtp
TRIGR_COMMS_SMTP_HOST=smtp.example.com
TRIGR_COMMS_SMTP_PORT=587
TRIGR_COMMS_SMTP_USER=ReplaceMeWithSMTPUser
TRIGR_COMMS_SMTP_PASS=ReplaceMeWithSMTPPassword
# SMS
TRIGR_COMMS_SMS_ENABLED=true
TRIGR_COMMS_SMS_PROVIDER=twilio
TRIGR_COMMS_SMS_API_KEY=ReplaceMeWithSMSAPIKey

# -- TEMPORAL (pentru journey workflows) --
TRIGR_BPM_TEMPORAL_URL=${SUITE_BPM_TEMPORAL_HOST_PORT}

# -- URL-URI SERVICII INTERNE --
TRIGR_SVC_CP_IDENTITY_URL=http://identity:6250
TRIGR_SVC_VETTIFY_URL=http://vettify-api:6850

# -- OBSERVABILITATE --
TRIGR_OBS_OTEL_ENDPOINT=${SUITE_OBS_OTEL_COLLECTOR_GRPC_URL}

