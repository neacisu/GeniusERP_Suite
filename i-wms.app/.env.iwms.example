# ============================================
# I-WMS - INVENTORY & WAREHOUSE MANAGEMENT
# ============================================
# i-WMS-specific configuration
# Local overrides: i-wms.app/.env.local (gitignored)
# Production: i-wms.app/.env.production (gitignored)

# ===== APPLICATION IDENTITY =====
PORT=3103
SERVICE_NAME=i-wms
SERVICE_VERSION=1.0.0

# ===== WAREHOUSE MANAGEMENT =====
IWMS_WAREHOUSE_ID=default-warehouse
IWMS_ENABLE_MULTI_WAREHOUSE=true
IWMS_ENABLE_CROSS_WAREHOUSE_TRANSFER=true

# ===== INVENTORY TRACKING =====
IWMS_INVENTORY_TRACKING_LEVEL=product # product | lot | serial
IWMS_ENABLE_BARCODE_SCANNING=true
IWMS_BARCODE_FORMAT=EAN13 # EAN13 | Code128 | QR
IWMS_ENABLE_RFID=false
IWMS_RFID_READER_URL=

# ===== STOCK MANAGEMENT =====
IWMS_ENABLE_STOCK_RESERVATION=true
IWMS_ENABLE_BATCH_MANAGEMENT=true
IWMS_ENABLE_EXPIRY_DATE_TRACKING=true
IWMS_LOW_STOCK_ALERT_THRESHOLD=10
IWMS_ENABLE_AUTO_REORDER=false

# ===== FULFILLMENT & PICKING =====
IWMS_PICKING_STRATEGY=fifo # fifo | lifo | closest-location | random
IWMS_ENABLE_WAVE_PICKING=true
IWMS_ENABLE_ZONE_PICKING=false
IWMS_ENABLE_BATCH_PICKING=true
IWMS_PICKING_ACCURACY_TARGET=99.9

# ===== RECEIVING & PUTAWAY =====
IWMS_ENABLE_ASN_RECEIVE=true # Advanced Shipping Notice
IWMS_ENABLE_3PL_INTEGRATION=false
IWMS_PUTAWAY_STRATEGY=optimized # optimized | directed | random
IWMS_ENABLE_CYCLE_COUNTING=true

# ===== RETURNS MANAGEMENT =====
IWMS_ENABLE_RETURNS_PROCESSING=true
IWMS_ENABLE_RMA_SYSTEM=true # Return Merchandise Authorization
IWMS_RETURNS_INSPECTION_REQUIRED=true
IWMS_RETURNS_RESTOCKING_POLICY=case-by-case # automatic | case-by-case | reject-all

# ===== SHIPPING INTEGRATION =====
IWMS_ENABLE_CARRIER_INTEGRATION=true
IWMS_CARRIERS=fedex,ups,dhl,gls
IWMS_ENABLE_LABEL_PRINTING=true
IWMS_ENABLE_MANIFEST_GENERATION=true

# FedEx Integration
IWMS_FEDEX_ACCOUNT_NUMBER=
IWMS_FEDEX_API_KEY=
IWMS_FEDEX_API_PASSWORD=

# UPS Integration
IWMS_UPS_ACCOUNT_NUMBER=
IWMS_UPS_API_KEY=

# ===== LOCATION MANAGEMENT =====
IWMS_ENABLE_ZONE_MANAGEMENT=true
IWMS_ENABLE_AISLE_MANAGEMENT=true
IWMS_LOCATION_FORMAT=ZONE-AISLE-RACK-SHELF # Custom format
IWMS_MAX_LOCATIONS=50000

# ===== EQUIPMENT & DEVICES =====
IWMS_ENABLE_VOICE_PICKING=false
IWMS_ENABLE_MOBILE_PICKING=true
IWMS_ENABLE_VOICE_PACKING=false
IWMS_MAX_CONCURRENT_DEVICES=100

# ===== REPORTING & ANALYTICS =====
IWMS_ENABLE_REAL_TIME_DASHBOARD=true
IWMS_ENABLE_KPI_TRACKING=true
IWMS_INVENTORY_ACCURACY_THRESHOLD=95
IWMS_ENABLE_PERFORMANCE_REPORTS=true

# ===== SUITE INTEGRATION =====
IWMS_ENABLE_SUITE_INTEGRATION=true
SUITE_SHELL_URL=http://localhost:3001
SUITE_LOGIN_URL=http://localhost:3003

# GeniusERP Integration (for order management)
IWMS_ENABLE_GENIUSERP_INTEGRATION=true
GENIUSERP_API_URL=http://localhost:8000

# Archify Integration (for document storage)
IWMS_ENABLE_ARCHIFY_INTEGRATION=false
ARCHIFY_API_URL=http://localhost:3100

# ===== PERFORMANCE =====
IWMS_CACHE_ENABLED=true
IWMS_CACHE_TTL=1800 # 30 minutes (frequent updates)
IWMS_ENABLE_COMPRESSION=true
IWMS_MAX_BATCH_SIZE=500
