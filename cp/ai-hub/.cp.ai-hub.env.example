#######################################################
# CONTROL PLANE: AI-HUB (CP_AI)
# Sursă: Tabelul 5 - Interval 6400-6449
#######################################################

# -- CONFIGURARE APLICAȚIE --
# Portul intern al API-ului AI Hub
CP_AI_APP_PORT=6400
CP_AI_APP_METRICS_PORT=6401
CP_AI_APP_NODE_ENV=production

# -- BAZA DE DATE --
CP_AI_DB_POSTGRES_URL=postgresql://ai_user:ReplaceMe@postgres_server:5432/ai_hub_db

# -- AUTENTIFICARE --
CP_AI_AUTH_IDENTITY_URL=http://identity:6250
CP_AI_AUTH_JWT_SECRET=ReplaceMeWithStrongJWTSecretKey

# -- AI PROVIDERS --
# OpenAI
CP_AI_API_OPENAI_KEY=ReplaceMeWithOpenAIAPIKey
CP_AI_API_OPENAI_MODEL=gpt-4-turbo

# Anthropic Claude
CP_AI_API_ANTHROPIC_KEY=ReplaceMeWithAnthropicAPIKey
CP_AI_API_ANTHROPIC_MODEL=claude-3-opus

# Google AI
CP_AI_API_GOOGLE_KEY=ReplaceMeWithGoogleAIAPIKey
CP_AI_API_GOOGLE_MODEL=gemini-pro

# -- RAG (Retrieval-Augmented Generation) --
CP_AI_RAG_ENABLED=true
CP_AI_RAG_EMBEDDINGS_MODEL=text-embedding-ada-002
CP_AI_RAG_VECTOR_DB_URL=postgresql://ai_user:ReplaceMe@postgres_server:5432/ai_vectors_db

# -- INFERENCE --
CP_AI_INFERENCE_TIMEOUT=60000
CP_AI_INFERENCE_MAX_TOKENS=4096

# -- OBSERVABILITATE --
CP_AI_OBS_OTEL_ENDPOINT=${SUITE_OBS_OTEL_COLLECTOR_GRPC_URL}

