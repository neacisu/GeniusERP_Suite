PORT=3005
NODE_ENV=development
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
OTEL_SERVICE_NAME=identity

# Identity Service Configuration
# Authentication and identity management endpoints

# Database configuration (placeholder for future implementation)
# DATABASE_URL=postgresql://user:password@localhost:5432/identity

# JWT/Token configuration
# JWT_SECRET=your-secret-key-here
# JWT_EXPIRATION=3600

# OAuth2/OIDC providers (optional)
# OAUTH2_GOOGLE_CLIENT_ID=
# OAUTH2_GOOGLE_CLIENT_SECRET=
# OAUTH2_GITHUB_CLIENT_ID=
# OAUTH2_GITHUB_CLIENT_SECRET=

# LDAP/Active Directory configuration (optional)
# LDAP_SERVER=ldap://localhost
# LDAP_PORT=389
# LDAP_BASE_DN=dc=example,dc=com
# LDAP_ADMIN_DN=cn=admin,dc=example,dc=com
# LDAP_ADMIN_PASSWORD=

# Feature flags
ENABLE_JWT_TOKENS=true
ENABLE_OAUTH2=false
ENABLE_LDAP=false
ENABLE_MFA=false

# Cache configuration
CACHE_TTL=3600
CACHE_STRATEGY=memory

# Security headers
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Observability
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=prometheus
OTEL_LOG_LEVEL=info
