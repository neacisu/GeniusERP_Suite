# ============================================
# GENIUSSUITE CONTROL PLANE - SHARED CONFIG
# ============================================
# For all CP services: suite-shell, suite-admin, suite-login, identity, licensing, analytics-hub, ai-hub
# Local overrides: cp/.env.local (gitignored)
# Production: cp/.env.production (gitignored)

# ===== MF ORCHESTRATION (suite-shell) =====
MF_REMOTE_ENTRY_HOST=http://localhost:3001
MF_REMOTE_ENTRY_PORT=3001
MF_MODULES_REGISTRY_URL=http://localhost:3001/modules-registry
MF_FEDERATION_HOST=http://localhost:3001

# ===== AUTHENTICATION (suite-login / identity) =====
# These reference the authentication services, not actual secrets
AUTH_SERVICE_URL=http://localhost:3003
AUTH_SERVICE_PORT=3003
AUTH_JWKS_URL=http://localhost:3003/.well-known/jwks.json
AUTH_TOKEN_ENDPOINT=http://localhost:3003/auth/token
SUPERTOKENS_CONNECTION_URI=postgres://supertokens:password@localhost:5432/supertokens
SUPERTOKENS_API_KEY=change-me-in-production

# ===== ROLE-BASED ACCESS CONTROL (RBAC) =====
RBAC_ENABLED=true
RBAC_CACHE_ENABLED=true
RBAC_CACHE_TTL=3600

# ===== LICENSING SERVICE (licensing) =====
LICENSING_SERVICE_URL=http://localhost:3005
LICENSING_SERVICE_PORT=3005
LICENSE_CHECK_INTERVAL=3600000
LICENSE_ENFORCEMENT_MODE=warning # or strict

# ===== ANALYTICS HUB (analytics-hub) =====
ANALYTICS_SERVICE_URL=http://localhost:3006
ANALYTICS_SERVICE_PORT=3006
TELEMETRY_ENABLED=true
TELEMETRY_BATCH_SIZE=100
TELEMETRY_FLUSH_INTERVAL=30000

# ===== AI HUB (ai-hub) =====
AI_SERVICE_URL=http://localhost:3007
AI_SERVICE_PORT=3007
INFERENCE_TIMEOUT=30000
LLM_PROVIDER=openai # or anthropic, local, etc.
LLM_MODEL=gpt-4

# ===== INTER-SERVICE COMMUNICATION =====
SERVICE_MESH_ENABLED=false
INTERNAL_API_SECRET=change-me-in-production
SERVICE_TO_SERVICE_TIMEOUT=10000
SERVICE_TO_SERVICE_RETRY_ATTEMPTS=3

# ===== OBSERVABILITY FOR CP SERVICES =====
OTEL_SERVICE_NAME_PREFIX=cp-
OTEL_TRACE_SAMPLING_RATE=0.1
OTEL_METRICS_ENABLED=true
