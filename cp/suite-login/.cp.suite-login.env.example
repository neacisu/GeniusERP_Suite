#######################################################
# CONTROL PLANE: SUITE-LOGIN (CP_LOGIN)
# Sursă: Tabelul 5 - Interval 6200-6249
#######################################################

# -- CONFIGURARE APLICAȚIE --
# Portul intern al API-ului Login
CP_LOGIN_APP_PORT=6200
CP_LOGIN_APP_METRICS_PORT=6201
CP_LOGIN_APP_NODE_ENV=production

# -- AUTENTIFICARE (PKCE + OIDC) --
# Conexiune la serviciul Identity/OIDC Provider
CP_LOGIN_AUTH_OIDC_ISSUER_URL=http://identity:6250
CP_LOGIN_AUTH_OIDC_CLIENT_ID=genius_suite_client
CP_LOGIN_AUTH_OIDC_CLIENT_SECRET=ReplaceMeWithOIDCClientSecret

# PKCE Configuration
CP_LOGIN_AUTH_PKCE_ENABLED=true
CP_LOGIN_AUTH_SESSION_SECRET=ReplaceMeWithStrongSessionSecretKey

# -- REDIRECT URLs --
CP_LOGIN_AUTH_REDIRECT_SUCCESS_URL=https://shell.geniuserp.app/dashboard
CP_LOGIN_AUTH_REDIRECT_LOGOUT_URL=https://geniuserp.app

# -- OBSERVABILITATE --
CP_LOGIN_OBS_OTEL_ENDPOINT=${SUITE_OBS_OTEL_COLLECTOR_GRPC_URL}

