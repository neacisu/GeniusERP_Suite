#######################################################
# CONTROL PLANE: SUITE-ADMIN (CP_ADMIN)
# Sursă: Tabelul 5 - Interval 6150-6199
#######################################################

# -- CONFIGURARE APLICAȚIE --
# Portul intern al API-ului Suite Admin
CP_ADMIN_APP_PORT=6150
CP_ADMIN_APP_METRICS_PORT=6151
CP_ADMIN_APP_NODE_ENV=production

# -- AUTENTIFICARE --
CP_ADMIN_AUTH_IDENTITY_URL=http://identity:6250
CP_ADMIN_AUTH_JWT_SECRET=ReplaceMeWithStrongJWTSecretKey
CP_ADMIN_AUTH_ADMIN_ROLES=admin,superadmin

# -- CONFIGURĂRI ADMIN --
# Nivel de log pentru operațiuni administrative
CP_ADMIN_LOG_LEVEL=info

# Timeout pentru operațiuni administrative (în secunde)
CP_ADMIN_OPERATION_TIMEOUT_SECONDS=300

# -- API PROVIDERS --
# Integrări pentru admin (audit logs, monitoring, etc.)
CP_ADMIN_API_AUDIT_WEBHOOK_URL=ReplaceMeWithAuditWebhookURL

# -- OBSERVABILITATE --
CP_ADMIN_OBS_OTEL_ENDPOINT=${SUITE_OBS_OTEL_COLLECTOR_GRPC_URL}
CP_ADMIN_OBS_SERVICE_NAME=suite-admin
CP_ADMIN_OBS_METRICS_PORT=6151