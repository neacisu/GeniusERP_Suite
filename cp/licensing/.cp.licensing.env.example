#######################################################
# CONTROL PLANE: LICENSING (CP_LIC)
# Sursă: Tabelul 5 - Interval 6300-6349
#######################################################

# -- CONFIGURARE APLICAȚIE --
# Portul intern al API-ului Licensing
CP_LIC_APP_PORT=6300
CP_LIC_APP_METRICS_PORT=6301
CP_LIC_APP_NODE_ENV=production

# -- BAZA DE DATE (Specifică 'licensing') --
CP_LIC_DB_POSTGRES_URL=postgresql://licensing_user:ReplaceMe@postgres_server:5432/licensing_db

# -- AUTENTIFICARE --
CP_LIC_AUTH_IDENTITY_URL=http://identity:6250
CP_LIC_AUTH_JWT_SECRET=ReplaceMeWithStrongJWTSecretKey

# -- CONFIGURĂRI LICENSING --
# Cheie master pentru generarea și validarea licențelor
CP_LIC_MASTER_KEY=ReplaceMeWithStrongMasterKeyForLicensing

# URL pentru verificarea licențelor online (opțional)
CP_LIC_VALIDATION_URL=https://license.geniuserp.app/validate

# Perioada de verificare automată a licențelor (în ore)
CP_LIC_CHECK_INTERVAL_HOURS=24

# -- API PROVIDERS --
# Integrări pentru licensing (Stripe, Paddle, etc.)
CP_LIC_API_STRIPE_SECRET_KEY=ReplaceMeWithStripeSecretKey
CP_LIC_API_STRIPE_WEBHOOK_SECRET=ReplaceMeWithStripeWebhookSecret
CP_LIC_API_PADDLE_API_KEY=ReplaceMeWithPaddleAPIKey

# -- CACHE ȘI SESSIONS --
# Redis pentru cache licensing
CP_LIC_CACHE_REDIS_URL=redis://redis:6379

# -- OBSERVABILITATE --
CP_LIC_OBS_OTEL_ENDPOINT=${SUITE_OBS_OTEL_COLLECTOR_GRPC_URL}
CP_LIC_OBS_SERVICE_NAME=licensing
CP_LIC_OBS_METRICS_PORT=6301