#######################################################
# CONTROL PLANE: ANALYTICS-HUB (CP_ANLY)
# Sursă: Tabelul 5 - Interval 6350-6399
#######################################################

# -- CONFIGURARE APLICAȚIE --
# Portul intern al API-ului Analytics Hub
CP_ANLY_APP_PORT=6350
CP_ANLY_APP_METRICS_PORT=6351
CP_ANLY_APP_NODE_ENV=production

# -- BAZA DE DATE --
CP_ANLY_DB_POSTGRES_URL=postgresql://analytics_user:ReplaceMe@postgres_server:5432/analytics_db

# -- AUTENTIFICARE --
CP_ANLY_AUTH_IDENTITY_URL=http://identity:6250
CP_ANLY_AUTH_JWT_SECRET=ReplaceMeWithStrongJWTSecretKey

# -- KAFKA (Data Mesh - Stream Consumers) --
CP_ANLY_MQ_KAFKA_BROKERS=${SUITE_MQ_KAFKA_BROKERS}
CP_ANLY_MQ_KAFKA_GROUP_ID=analytics-hub-consumers
CP_ANLY_MQ_KAFKA_AUTO_OFFSET_RESET=earliest

# -- DATA PRODUCTS --
CP_ANLY_DATA_PRODUCTS_ENABLED=true
CP_ANLY_DATA_CATALOG_ENABLED=true

# -- TEMPORAL (pentru workflows de ingestie) --
CP_ANLY_BPM_TEMPORAL_URL=${SUITE_BPM_TEMPORAL_HOST_PORT}

# -- OBSERVABILITATE --
CP_ANLY_OBS_OTEL_ENDPOINT=${SUITE_OBS_OTEL_COLLECTOR_GRPC_URL}

