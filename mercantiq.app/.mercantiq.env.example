#######################################################
# APLICAȚIE: MERCANTIQ - Commerce & Sales Ops (MERCQ)
# Sursă: Tabelul 5 - Interval 6700-6749
#######################################################

# -- CONFIGURARE APLICAȚIE --
# Portul intern al API-ului
MERCQ_APP_PORT=6700
MERCQ_APP_METRICS_PORT=6701
MERCQ_APP_ENGINES_PORT=6702
MERCQ_APP_NODE_ENV=production

# -- BAZA DE DATE (Specifică 'mercantiq') --
MERCQ_DB_POSTGRES_URL=postgresql://mercantiq_user:ReplaceMe@postgres_server:5432/mercantiq_db

# -- AUTENTIFICARE --
MERCQ_AUTH_IDENTITY_URL=http://identity:6250
MERCQ_AUTH_JWT_SECRET=ReplaceMeWithStrongJWTSecretKey

# -- ECOMMERCE --
MERCQ_ECOMMERCE_ENABLED=true
MERCQ_ECOMMERCE_CART_SESSION_TTL=3600

# -- INTEGRĂRI ECOMMERCE --
# Shopify
MERCQ_API_SHOPIFY_SHOP_NAME=your-shop-name
MERCQ_API_SHOPIFY_ACCESS_TOKEN=ReplaceMeWithShopifyAccessToken
MERCQ_API_SHOPIFY_API_VERSION=2024-01

# WooCommerce
MERCQ_API_WOOCOMMERCE_URL=https://your-store.com
MERCQ_API_WOOCOMMERCE_KEY=ReplaceMeWithWooCommerceKey
MERCQ_API_WOOCOMMERCE_SECRET=ReplaceMeWithWooCommerceSecret

# -- SALES ASSIST --
MERCQ_SALES_QUOTES_ENABLED=true
MERCQ_SALES_PRICING_ENGINE_ENABLED=true

# -- URL-URI SERVICII INTERNE --
MERCQ_SVC_CP_IDENTITY_URL=http://identity:6250
MERCQ_SVC_CP_AI_URL=http://ai-hub:6400
MERCQ_SVC_NUMERIQO_URL=http://numeriqo-api:6750
MERCQ_SVC_VETTIFY_URL=http://vettify-api:6850

# -- OBSERVABILITATE --
MERCQ_OBS_OTEL_ENDPOINT=${SUITE_OBS_OTEL_COLLECTOR_GRPC_URL}

