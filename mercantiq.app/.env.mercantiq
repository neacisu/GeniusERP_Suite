# ============================================
# MERCANTIQ - E-COMMERCE & MARKETPLACE
# ============================================
# Mercantiq-specific configuration
# Local overrides: mercantiq.app/.env.local (gitignored)
# Production: mercantiq.app/.env.production (gitignored)

# ===== APPLICATION IDENTITY =====
PORT=3104
SERVICE_NAME=mercantiq
SERVICE_VERSION=1.0.0

# ===== STOREFRONT CONFIGURATION =====
MERCANTIQ_STOREFRONT_URL=http://localhost:3104
MERCANTIQ_STOREFRONT_THEME=default
MERCANTIQ_ENABLE_MULTI_STOREFRONT=true
MERCANTIQ_MAX_STOREFRONTS=10

# ===== PRODUCT CATALOG =====
MERCANTIQ_ENABLE_PRODUCT_VARIANTS=true
MERCANTIQ_ENABLE_ATTRIBUTE_MANAGEMENT=true
MERCANTIQ_ENABLE_BULK_UPLOAD=true
MERCANTIQ_MAX_PRODUCT_IMAGES=10
MERCANTIQ_ENABLE_DIGITAL_PRODUCTS=true
MERCANTIQ_ENABLE_SUBSCRIPTION_PRODUCTS=false

# ===== SHOPPING CART & CHECKOUT =====
MERCANTIQ_ENABLE_GUEST_CHECKOUT=true
MERCANTIQ_ENABLE_ONE_PAGE_CHECKOUT=true
MERCANTIQ_ENABLE_ABANDONED_CART_RECOVERY=true
MERCANTIQ_ENABLE_WISHLISTS=true
MERCANTIQ_ENABLE_GIFT_CARDS=true

# ===== PAYMENT PROCESSING =====
MERCANTIQ_PAYMENT_PROVIDERS=stripe,paypal,square # stripe | paypal | square | authorize.net
MERCANTIQ_ENABLE_APPLE_PAY=true
MERCANTIQ_ENABLE_GOOGLE_PAY=true
MERCANTIQ_ENABLE_CRYPTOCURRENCY=false
MERCANTIQ_ENABLE_BUY_NOW_PAY_LATER=true

# Stripe Configuration
MERCANTIQ_STRIPE_PUBLIC_KEY=
MERCANTIQ_STRIPE_SECRET_KEY=
MERCANTIQ_STRIPE_WEBHOOK_SECRET=

# PayPal Configuration
MERCANTIQ_PAYPAL_CLIENT_ID=
MERCANTIQ_PAYPAL_CLIENT_SECRET=
MERCANTIQ_PAYPAL_MODE=sandbox # sandbox | production

# ===== SHIPPING & TAX =====
MERCANTIQ_SHIPPING_CALCULATORS=realtime,flatrate,table # realtime | flatrate | table
MERCANTIQ_ENABLE_REAL_TIME_RATES=true
MERCANTIQ_ENABLE_LOCAL_PICKUP=true
MERCANTIQ_ENABLE_DIGITAL_DELIVERY=true
MERCANTIQ_TAX_CALCULATION=us-tax # us-tax | avalara | tax-jar | custom

# ===== CUSTOMER MANAGEMENT =====
MERCANTIQ_ENABLE_CUSTOMER_REVIEWS=true
MERCANTIQ_ENABLE_PRODUCT_RATINGS=true
MERCANTIQ_ENABLE_CUSTOMER_LOYALTY_PROGRAM=true
MERCANTIQ_LOYALTY_POINTS_CURRENCY=points
MERCANTIQ_ENABLE_REFERRAL_PROGRAM=false

# ===== MARKETING & PROMOTIONS =====
MERCANTIQ_ENABLE_DISCOUNT_CODES=true
MERCANTIQ_ENABLE_BULK_DISCOUNTS=true
MERCANTIQ_ENABLE_TIME_LIMITED_OFFERS=true
MERCANTIQ_ENABLE_EMAIL_CAMPAIGNS=true
MERCANTIQ_ENABLE_SMS_CAMPAIGNS=false
MERCANTIQ_ENABLE_SOCIAL_COMMERCE=true

# ===== MARKETPLACE FUNCTIONALITY =====
MERCANTIQ_ENABLE_VENDOR_MARKETPLACE=false
MERCANTIQ_ENABLE_MULTI_VENDOR=false
MERCANTIQ_MAX_VENDORS=100
MERCANTIQ_VENDOR_COMMISSION_RATE=0.15 # 15%

# ===== SEO & CONTENT =====
MERCANTIQ_ENABLE_SEO_OPTIMIZATION=true
MERCANTIQ_ENABLE_BLOG=true
MERCANTIQ_ENABLE_CONTENT_MANAGEMENT=true
MERCANTIQ_ENABLE_URL_REWRITING=true

# ===== INTEGRATIONS =====
MERCANTIQ_ENABLE_SUITE_INTEGRATION=true
SUITE_SHELL_URL=http://localhost:3001
SUITE_LOGIN_URL=http://localhost:3003

# GeniusERP Integration (for inventory & orders)
MERCANTIQ_ENABLE_GENIUSERP_INTEGRATION=true
GENIUSERP_API_URL=http://localhost:8000

# i-WMS Integration (for shipping)
MERCANTIQ_ENABLE_IWMS_INTEGRATION=false
IWMS_API_URL=http://localhost:3103

# Email Service
MERCANTIQ_EMAIL_PROVIDER=sendgrid # sendgrid | mailgun | ses
MERCANTIQ_SENDGRID_API_KEY=
MERCANTIQ_MAILGUN_API_KEY=
MERCANTIQ_MAILGUN_DOMAIN=

# ===== PERFORMANCE =====
MERCANTIQ_ENABLE_PRODUCT_CACHING=true
MERCANTIQ_CACHE_TTL=3600
MERCANTIQ_ENABLE_IMAGE_OPTIMIZATION=true
MERCANTIQ_ENABLE_LAZY_LOADING=true
MERCANTIQ_ENABLE_CDN=false
MERCANTIQ_CDN_ENDPOINT=

# ===== SECURITY =====
MERCANTIQ_ENABLE_PCI_DSS_COMPLIANCE=true
MERCANTIQ_ENABLE_FRAUD_DETECTION=true
MERCANTIQ_ENABLE_RATE_LIMITING=true
